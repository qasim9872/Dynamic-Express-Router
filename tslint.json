{
    "extends": [
        "tslint:recommended", "tslint-config-prettier"
    ],
    "rules": {
        "interface-name": true,
        "max-line-length": [
            true,
            100
        ],
        "no-console": [
            true,
            "time",
            "timeEnd",
            "trace"
        ],
        "no-string-literal": false,
        "object-literal-sort-keys": false,
        "ordered-imports": true,
        "quotemark": [
            false,
            "avoid-escape"
        ],
        "trailing-comma": [
            false,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "variable-name": [
            true,
            "allow-leading-underscore",
            "ban-keywords",
            "check-format"
        ]
    }
}