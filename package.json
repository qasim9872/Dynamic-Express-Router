{
    "name": "route-boiler",
    "version": "1.1.0",
    "description": "A package that allows setting up routes dynamically",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "precommithusky": "yarn format && yarn test",
        "prepushhusky": "yarn format && yarn test",
        "test": "jest",
        "staged-test": "yarn test --bail --findRelatedTests",
        "pretty-base": "prettier '*.{ts, js, json}' '{src,tests}/**/*.ts'",
        "format": "yarn pretty-base --write",
        "lint": "eslint --fix 'src/**/*.{ts,tsx}'",
        "dev": "DEBUG=route-boiler:* nodemon",
        "commit": "git-cz",
        "release": "standard-version"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/qasim9872/route-boiler.git"
    },
    "keywords": [
        "express",
        "dynamic",
        "routing"
    ],
    "author": "Muhammad Qasim <qasim9872@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/qasim9872/route-boiler/issues"
    },
    "homepage": "https://github.com/qasim9872/route-boiler#readme",
    "devDependencies": {
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@types/debug": "^4.1.4",
        "@types/express": "^4.17.0",
        "@types/fs-extra": "^7.0.0",
        "@types/jest": "^24.0.14",
        "@types/lodash": "^4.14.134",
        "@types/supertest": "^2.0.7",
        "@typescript-eslint/eslint-plugin": "^1.10.2",
        "@typescript-eslint/parser": "^1.10.2",
        "commitizen": "^3.1.1",
        "cz-conventional-changelog": "2.1.0",
        "eslint": "^5.16.0",
        "husky": "^2.4.1",
        "jest": "^24.8.0",
        "lint-staged": "^8.2.1",
        "nodemon": "^1.19.1",
        "prettier": "^1.18.2",
        "standard-version": "^6.0.1",
        "supertest": "^4.0.2",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.2.0",
        "tslint": "^5.17.0",
        "typescript": "^3.5.2",
        "typescript-eslint-parser": "^22.0.0"
    },
    "lint-staged": {
        "*.ts": [
            "yarn format",
            "yarn lint",
            "yarn staged-test",
            "git add"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "dependencies": {
        "app-root-path": "^2.2.1",
        "debug": "^4.1.1",
        "eslint-config-prettier": "^5.0.0",
        "eslint-plugin-prettier": "^3.1.0",
        "express": "^4.17.1",
        "express-promise-router": "^3.0.3",
        "fs-extra": "^8.0.1",
        "glob": "^7.1.4",
        "glob-promise": "^3.4.0",
        "is-what": "^3.2.3",
        "lodash": "^4.17.11",
        "merge-json": "^0.1.0-b.3"
    }
}
