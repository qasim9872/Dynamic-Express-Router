{
  "name": "route-boiler",
  "version": "1.0.0",
  "description": "A library for dynamically bootstrapping routers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A lib",
    "postversion": "git push && git push --tags",
    "build": "tsc",
    "dev": "DEBUG=route-boiler:* nodemon",
    "build:watch": "tsc --watch",
    "docs": "typedoc --out docs lib",
    "gh-pages": "rimraf docs && npm run docs && gh-pages -d docs",
    "lint1": "tslint --project \"./tsconfig.json\"",
    "lint": "tslint -p tsconfig.json",
    "format": "prettier --write \"lib/**/*.ts\" \"lib/**/*.js\"",
    "test": "jest --config jestconfig.json"
  },
  "author": "Muhammad Qasim",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.7",
    "gh-pages": "^2.0.1",
    "jest": "^23.6.0",
    "prettier": "^1.15.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "@types/debug": "0.0.31",
    "debug": "^4.1.1",
    "ts-node": "^7.0.1"
  }
}